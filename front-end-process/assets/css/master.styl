global-reset()
@import "variables"
@import "primary_flow"
@import "_header"

*
  box-sizing: border-box

html, body
  background: background-blue
  font-family: 'Open Sans'

.cl
  clear: both

.left
  float: left

.right
  float: right

#wrap
  max-width: max-width
  width: 100%
  margin: 0px auto
  min-width: min-width

.ship
  height: 220px
  width: 400px
  margin: 0 auto 50px auto
  position: relative
  top: 90px
  background: url("/img/ship_it@2x.png") no-repeat center center
  background-size: 100%
  h2
    margin-left: -20px
    text-align: center
.nodes
  position: relative;
  z-index: 10;
  .arrow-top, .arrow-bottom
    width: 48%
    height: 115px;
    background: url("/img/top-blue-loop.svg") no-repeat center center;
    background-position: 100% 80%
    background-size: 37%
    position: relative
  .arrow-bottom
    background-image: url("/img/bottom-blue-loop.svg");
    background-position: 101% 20%
  .node-wrap
    width: 48%
    position: relative
    &.left
      padding-right: 2%
    &.right
      padding-left: 2%
      .notch
        z-index: 10
        margin-top: -10px
        top: 50%
        position: absolute
        height: 14px
        width: 104%
        margin-left: -4%
        background: url("/img/dark-blue-notch.svg") no-repeat left center
        left: 0px
    &.center
      width: 70%
      margin: 0px auto
      max-width: 650px
      margin-bottom: 30px
      .node
        width: 100%
      .node-images img
        width: 50%
        &.left
          padding-right: 6.5%
        &.right
          padding-left: 6.5%
    .node-images
      padding: 10px
      img
        width: 100%
        height: auto
        border-radius: 5px
        overflow: hidden
        margin-top: 10px
      &.left
        width: 30%
      &.right
        width: 30%
  .step-example
    background-position: center center
    background-repeat: no-repeat
    background-size: cover;
    height: 100px;
    width: 100%;
  .wireframe
    background-image: url("")
  .wireframe-implementation
    background-image: url("/img/dom_elements.png")
  .node
    position: relative
    width: 69.5%;
    padding: 25px
    border-radius 3px
    -moz-background-clip padding
    -webkit-background-clip padding-box
    background-clip padding-box
    background-color #fbfdff
    box-shadow 0 1px 1px #91a8b8
    background linear-gradient(bottom, #ebf2f8 0%, #fff 2%, #fff 100%)
    h2, h4
      font-size 20px
      font-weight: bold
      color: #525252
    p
      margin: 10px 0
      font-size: 15px
      color: #71767f
      line-height: 20px
    h4
      margin-top: 20px
      margin-bottom: 10px
      font-size 15px
    ul
      color: #71767f
      list-style: square
      margin-left: 20px
      font-size: 15px
      line-height: 20px
    .circle
      height: 20px
      width: 20px
      border-radius: 50%
      position: absolute
      background: background-blue
      box-shadow inset 0 1px 1px #91a8b8
      top: 50%
      &.right
        right: -10px
      &.left
        left: -10px
      &.bottom
        left: 50%
        top: 100%
        margin-top: -10px
      &.top
        left: 50%
        top: 0%
        margin-top: -10px
